@model _Surveys.Models.SurveyResults

<h2>Survey Results</h2>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #ffffff;
        margin: 40px;
    }

    h2 {
        text-align: center;
        font-weight: normal;
        margin-bottom: 30px;
    }

    .results-container {
        max-width: 700px;
        margin: 0 auto;
        border: 1px solid #000;
        padding: 30px 40px;
        box-shadow: 0 0 5px rgba(0,0,0,0.1);
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    td {
        padding: 12px 10px;
        border-bottom: 1px solid #ccc;
        font-size: 15px;
    }

        td:first-child {
            text-align: left;
            width: 70%;
        }

        td:last-child {
            text-align: right;
            font-weight: bold;
        }

    .nav-links {
        text-align: right;
        font-size: 14px;
        margin-bottom: 20px;
    }

        .nav-links a {
            margin-left: 20px;
            text-decoration: none;
            color: #007bff;
            font-weight: bold;
        }

            .nav-links a:hover {
                text-decoration: underline;
            }
</style>

<table border="1" cellpadding="10">
    <tr>
        <td>Total number of surveys:</td>
        <td>@Model.TotalSurveys</td>
    </tr>
    <tr>
        <td>Average Age:</td>
        <td>@Model.AverageAge.ToString("0.0")</td>
    </tr>
    <tr>
        <td>Oldest person who participated:</td>
        <td>@Model.MaxAge</td>
    </tr>
    <tr>
        <td>Youngest person who participated:</td>
        <td>@Model.MinAge</td>
    </tr>
    <tr>
        <td>Percentage of people who like Pizza:</td>
        <td>@((double)Model.PizzaCount / Model.TotalSurveys * 100)%</td>
    </tr>
    <tr>
        <td>Percentage of people who like Pasta:</td>
        <td>@((double)Model.PastaCount / Model.TotalSurveys * 100)%</td>
    </tr>
    <tr>
        <td>Percentage of people who like Pap and Wors:</td>
        <td>@((double)Model.PapWorsCount / Model.TotalSurveys * 100)%</td>
    </tr>
    <tr>
        <td>People who like to watch movies:</td>
        <td>@Model.AvgMovies.ToString("0.0")</td>
    </tr>
    <tr>
        <td>People who like to listen to radio:</td>
        <td>@Model.AvgRadio.ToString("0.0")</td>
    </tr>
    <tr>
        <td>People who like to eat out:</td>
        <td>@Model.AvgEatOut.ToString("0.0")</td>
    </tr>
    <tr>
        <td>People who like to watch TV:</td>
        <td>@Model.AvgTV.ToString("0.0")</td>
    </tr>
</table>
